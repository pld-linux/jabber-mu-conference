<jabber>
  <!-- This connects the conference process to the master process -->
  <service id="muc-linker">
    <uplink/>
    <connect>
      <ip>127.0.0.1</ip>
      <port>5347</port>
      <secret>secret</secret>
    </connect>
  </service>

  <service id="muc.localhost">
    <load><conference>/usr/lib/jabberd14/mu-conference.so</conference></load>
    <conference xmlns="jabber:config:conference">
      <public/>
      <vCard>
        <FN>Public Chatrooms</FN>
        <DESC>This service is for public chatrooms.</DESC>
        <URL>http://muc.localhost/logs/</URL>
      </vCard>
      <history>20</history>
      <logdir>/var/log/jabberd14/mu-conference/</logdir>
      <sadmin>admin@localhost</sadmin>
      <notice>
        <join>has become available</join>
        <leave>has left</leave>
        <rename>is now known as</rename>
      </notice>
    </conference>
  </service>

  <log id='rlogger'>
    <host/>
    <logtype/>
    <format>%d: [%t] (%h): %s</format>
    <file>/var/log/jabberd14/mu-conference-record.log</file>
    <stderr/>
  </log>

  <log id='elogger'>
    <host/>
    <logtype/>
    <format>%d: [%t] (%h): %s</format>
    <file>/var/log/jabberd14/mu-conference-error.log</file>
    <stderr/>
  </log>

  <xdb id="xdb">
    <host/>
    <load>
      <xdb_file>/usr/lib/jabberd14/xdb_file.so</xdb_file>
    </load>
    <xdb_file xmlns="jabber:config:xdb_file">
      <spool>/var/lib/jabberd14/spool</spool>
    </xdb_file>
  </xdb>
  
  <pidfile>/var/lib/jabberd14/mu-conference.pid</pidfile>

</jabber>
